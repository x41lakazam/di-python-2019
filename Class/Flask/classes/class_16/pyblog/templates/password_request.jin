{% extends "base.jin" %}

{% block main %}
    <h1>Reset password:</h1>
    <form method='POST' novalidate action="">
        {{ form.hidden_tag() }}

        <p>
            {{ form.password.label }}
            {{ form.password() }}
        </p>

        <p>
            {{ form.password_confirm.label }}
            {{ form.password_confirm() }}
        </p>
        <p>
            {{ form.submit() }}
        </p>
    </form>

{% endblock %}
