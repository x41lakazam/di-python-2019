<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Pyblog</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/master.css') }}">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <script>
        function filterSearch() {
            var filter = document.getElementById('search-input').value.toUpperCase();
            var dropdown = document.getElementById('my-dropdown');
            var dropdownElements = dropdown.getElementsByTagName('a');

            if (filter.length > 0){
                dropdown.style.display = "block";
            }
            else{
                dropdown.style.display = "none";
            }

            for (i=0; i < dropdownElements.length; i++){
                var elem = dropdownElements[i];
                var elemText = elem.textContent.toUpperCase();
                if (elemText.indexOf(filter) == 0){
                    elem.style.display = "";
                }
                else{
                    elem.style.display = "none";
                }
            }
        }
    </script>
</head>
<body>
    <div class="horizontal-navbar">
        <a href="{{ url_for('homepage') }}">Homepage</a>
        <a href="{{ url_for('contact') }}">Contact</a>
        <a href="{{ url_for('users_list') }}">Users</a>
        {%  if current_user.is_authenticated %}
            <a href="{{ url_for('newpost') }}">Add post</a>
            <p class="ignored"><a class="ignored" href="{{  url_for('user_profile', user_id=current_user.id) }}">{{ current_user.name }}</a> (<a class="ignored" href="{{ url_for('signout') }}">Sign out</a>)</p>
        {%  else %}
            <a href="{{ url_for('signup') }}">Sign Up</a>
            <a href="{{ url_for('signin') }}">Sign In</a>
        {%  endif %}
        <div class="search-div">
            <form class="search-bar" action="{{ url_for('bridge_content_search') }}">
                <input id="search-input" onkeyup="filterSearch()" class="txt-input" type="text" placeholder="Search.." size=32 name="searched_txt">
                <input type="submit" value="ðŸ”Ž">
            </form>
            <div id="my-dropdown" class="ignored search-dropdown">
                {% for user in UserModel.query.all() %}
                    <a class="ignored" href="{{ url_for('user_profile', user_id=user.id) }}">{{ user.name }}</a> 
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="main-container">

        <div class="flashed_msg">
            {% for message in get_flashed_messages() %}
            <p>{{ message }}</p>
            {% endfor %}
        </div>

        {% block main %}
        {% endblock %}
    </div>

</body>
</html>
